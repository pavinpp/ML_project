   "source": [
    "# Group by Month and calculate averages\n",
    "seasonal_weather = nasa_df.groupby('month')[['rain', 'temp', 'solar']].mean()\n",
    "\n",
    "# Plotting\n",
    "fig, axes = plt.subplots(3, 1, figsize=(12, 15), sharex=True)\n",
    "\n",
    "# Rainfall\n",
    "sns.lineplot(data=seasonal_weather, x=seasonal_weather.index, y='rain', ax=axes[0], color='blue', marker='o')\n",
    "axes[0].set_title('Average Global Rainfall by Month')\n",
    "axes[0].set_ylabel('Rainfall (mm)')\n",
    "\n",
    "# Temperature\n",
    "sns.lineplot(data=seasonal_weather, x=seasonal_weather.index, y='temp', ax=axes[1], color='orange', marker='o')\n",
    "axes[1].set_title('Average Global Temperature by Month')\n",
    "axes[1].set_ylabel('Temperature (Â°C)')\n",
    "\n",
    "# Solar Radiation\n",
    "sns.lineplot(data=seasonal_weather, x=seasonal_weather.index, y='solar', ax=axes[2], color='red', marker='o')\n",
